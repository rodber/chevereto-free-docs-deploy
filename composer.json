{
    "name": "chevere/docs-deploy",
    "description": "A VuePress documentation deploy",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Rodolfo Berrios",
            "email": "rodolfo@chevere.org"
        }
    ],
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "DocsDeploy\\": "src/"
        }
    },
    "require": {
        "chevere/chevere": "^0.3"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^9.1",
        "phpunit/phpunit": "^9.5",
        "chevere/xr": "^0.1"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "update-cs": "curl --create-dirs -O --output-dir .ecs https://raw.githubusercontent.com/chevere/code-style/main/.ecs/ecs-chevere.php"
    },
    "scripts-descriptions": {
        "update-cs": "Update Chevere code style definition"
    }
}
